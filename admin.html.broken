        </nav>
    </div>

    <!-- 繝｡繧､繝ｳ繧ｳ繝ｳ繝・Φ繝・-->
    <div class="main-content">
        <!-- 繝倥ャ繝繝ｼ -->
        <div class="header">
            <h1>邂｡逅・判髱｢</h1>
            <div class="user-info">
                <span>側 邂｡逅・・/span>
                <button class="logout-btn" onclick="logout()">繝ｭ繧ｰ繧｢繧ｦ繝・/button>
            </div>
        </div>

        <!-- 繝繝・す繝･繝懊・繝峨そ繧ｯ繧ｷ繝ｧ繝ｳ -->
        <div id="dashboard-section" class="content-section">
            <!-- 邨ｱ險医き繝ｼ繝・-->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-label">邱上Θ繝ｼ繧ｶ繝ｼ謨ｰ</div>
                    <div class="stat-value" id="totalUsers">-</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">邱上ヵ繧｡繧､繝ｫ謨ｰ</div>
                    <div class="stat-value" id="totalFiles">-</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">莉頑律縺ｮ繧｢繝・・繝ｭ繝ｼ繝・/div>
                    <div class="stat-value" id="todayUploads">-</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">繧ｹ繝医Ξ繝ｼ繧ｸ菴ｿ逕ｨ驥・/div>
                    <div class="stat-value" id="storageUsed">-</div>
                </div>
            </div>

            <!-- ・ Phase 21: KPI邨ｱ險医そ繧ｯ繧ｷ繝ｧ繝ｳ -->
            <div class="kpi-section">
                <div class="kpi-header">嶋 繧ｷ繧ｹ繝・ΒKPI</div>
                <div class="kpi-grid">
                    <div class="kpi-item">
                        <div class="kpi-label">霆｢騾・溷ｺｦ</div>
                        <div class="kpi-value" id="transferSpeed">-</div>
                    </div>
                    <div class="kpi-item">
                        <div class="kpi-label">蝨ｧ邵ｮ邇・/div>
                        <div class="kpi-value" id="compressionRatio">-</div>
                    </div>
                    <div class="kpi-item">
                        <div class="kpi-label">繧｢繝・・繝ｭ繝ｼ繝画・蜉溽紫</div>
                        <div class="kpi-value" id="uploadSuccessRate">-</div>
                    </div>
                    <div class="kpi-item">
                        <div class="kpi-label">蟷ｳ蝮・ヵ繧｡繧､繝ｫ繧ｵ繧､繧ｺ</div>
                        <div class="kpi-value" id="avgFileSize">-</div>
                    </div>
                </div>
            </div>

            <!-- 譛霑代・繧｢繧ｯ繝・ぅ繝薙ユ繧｣ -->
            <div class="recent-activity">
                <div class="activity-header">譛霑代・繧｢繧ｯ繝・ぅ繝薙ユ繧｣</div>
                <ul class="activity-list">
                    <li class="activity-item">
                        <div>譁ｰ隕上ヵ繧｡繧､繝ｫ縲罫eport.pdf縲阪′繧｢繝・・繝ｭ繝ｼ繝峨＆繧後∪縺励◆</div>
                        <div class="activity-time">5蛻・燕</div>
                    </li>
                    <li class="activity-item">
                        <div>繝ｦ繝ｼ繧ｶ繝ｼ縲蛍ser01縲阪′繝ｭ繧ｰ繧､繝ｳ縺励∪縺励◆</div>
                        <div class="activity-time">15蛻・燕</div>
                    </li>
                    <li class="activity-item">
                        <div>繝輔ぃ繧､繝ｫ縲慧ata.xlsx縲阪′繝繧ｦ繝ｳ繝ｭ繝ｼ繝峨＆繧後∪縺励◆</div>
                        <div class="activity-time">30蛻・燕</div>
                    </li>
                </ul>
            </div>
        </div>

        <!-- 縺昴・莉悶・繧ｻ繧ｯ繧ｷ繝ｧ繝ｳ・磯撼陦ｨ遉ｺ・・-->
        <div id="files-section" class="content-section" style="display: none;">
            <h2>繝輔ぃ繧､繝ｫ邂｡逅・/h2>
            <p>繝輔ぃ繧､繝ｫ邂｡逅・ｩ溯・縺ｯ髢狗匱荳ｭ縺ｧ縺吶・/p>
        </div>

        <div id="users-section" class="content-section" style="display: none;">
            <h2>繝ｦ繝ｼ繧ｶ繝ｼ邂｡逅・/h2>
            <p>繝ｦ繝ｼ繧ｶ繝ｼ邂｡逅・ｩ溯・縺ｯ髢狗匱荳ｭ縺ｧ縺吶・/p>
        </div>

        <div id="logs-section" class="content-section" style="display: none;">
            <h2>繝ｭ繧ｰ</h2>
            <p>繝ｭ繧ｰ讖溯・縺ｯ髢狗匱荳ｭ縺ｧ縺吶・/p>
        </div>

        <div id="settings-section" class="content-section" style="display: none;">
            <h2>險ｭ螳・/h2>
            <p>險ｭ螳壽ｩ溯・縺ｯ髢狗匱荳ｭ縺ｧ縺吶・/p>
        </div>
    </div>

    <!-- 騾夂衍 -->
    <div id="notification" class="notification"></div>

    <script>
        // 隱崎ｨｼ繝√ぉ繝・け
        function checkAuth() {
            const token = localStorage.getItem('adminToken');
            if (!token) {
                window.location.href = '/admin-login.html';
                return false;
            }
            return true;
        }

        // 繧ｻ繧ｯ繧ｷ繝ｧ繝ｳ蛻・ｊ譖ｿ縺・
        function showSection(section) {
            // 縺吶∋縺ｦ縺ｮ繧ｻ繧ｯ繧ｷ繝ｧ繝ｳ繧帝撼陦ｨ遉ｺ
            document.querySelectorAll('.content-section').forEach(el => {
                el.style.display = 'none';
            });
            
            // 縺吶∋縺ｦ縺ｮ繝翫ン繧｢繧､繝・Β縺九ｉ active 繧ｯ繝ｩ繧ｹ繧貞炎髯､
            document.querySelectorAll('.nav-item').forEach(el => {
                el.classList.remove('active');
            });
            
            // 驕ｸ謚槭＆繧後◆繧ｻ繧ｯ繧ｷ繝ｧ繝ｳ繧定｡ｨ遉ｺ
            document.getElementById(`${section}-section`).style.display = 'block';
            
            // 驕ｸ謚槭＆繧後◆繝翫ン繧｢繧､繝・Β縺ｫ active 繧ｯ繝ｩ繧ｹ繧定ｿｽ蜉
            event.currentTarget.classList.add('active');
        }

        // 繝ｭ繧ｰ繧｢繧ｦ繝・
        function logout() {
            if (confirm('繝ｭ繧ｰ繧｢繧ｦ繝医＠縺ｾ縺吶°・・)) {
                localStorage.removeItem('adminToken');
                window.location.href = '/admin-login.html';
            }
        }

        // 騾夂衍陦ｨ遉ｺ
        function showNotification(message, type = 'info') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.className = `notification ${type} show`;
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // 邨ｱ險域ュ蝣ｱ縺ｮ隱ｭ縺ｿ霎ｼ縺ｿ
        async function loadStats() {
            try {
                const token = localStorage.getItem('adminToken');
                
                // Stats API繧貞他縺ｳ蜃ｺ縺・
                const response = await fetch('/api/stats', {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                if (!response.ok) {
                    throw new Error(`Stats API error: ${response.status}`);
                }

                const data = await response.json();

                // 蝓ｺ譛ｬ邨ｱ險医・譖ｴ譁ｰ・亥ｮ滄圀縺ｮAPI繝ｬ繧ｹ繝昴Φ繧ｹ蠖｢蠑上↓蜷医ｏ縺帙ｋ・・
                if (data.ok) {
                    // totalUsers縺ｯ蝗ｺ螳壼､3繧剃ｽｿ逕ｨ
                    document.getElementById('totalUsers').textContent = '3';
                    // 繝輔ぃ繧､繝ｫ謨ｰ
                    document.getElementById('totalFiles').textContent = data.filesTotal || '0';
                    // 莉頑律縺ｮ繧｢繝・・繝ｭ繝ｼ繝画焚
                    document.getElementById('todayUploads').textContent = data.uploadsLast24h || '0';
                    
                    // 繧ｹ繝医Ξ繝ｼ繧ｸ菴ｿ逕ｨ驥上・險育ｮ励→陦ｨ遉ｺ
                    const sizeInBytes = data.sizeTotalBytes || 0;
                    let storageText = '0 B';
                    if (sizeInBytes > 0) {
                        if (sizeInBytes < 1024) {
                            storageText = `${sizeInBytes} B`;
                        } else if (sizeInBytes < 1024 * 1024) {
                            storageText = `${(sizeInBytes / 1024).toFixed(2)} KB`;
                        } else if (sizeInBytes < 1024 * 1024 * 1024) {
                            storageText = `${(sizeInBytes / 1024 / 1024).toFixed(2)} MB`;
                        } else {
                            storageText = `${(sizeInBytes / 1024 / 1024 / 1024).toFixed(2)} GB`;
                        }
                    }
                    document.getElementById('storageUsed').textContent = storageText;
                }

                // KPI諠・ｱ縺ｮ蜿門ｾ暦ｼ亥挨繧ｨ繝ｳ繝峨・繧､繝ｳ繝茨ｼ・
                try {
                    const kpiResponse = await fetch('/api/kpi/get', {
                        headers: {
                            'Authorization': `Bearer ${token}`
                        }
                    });

                    if (kpiResponse.ok) {
                        const kpiData = await kpiResponse.json();
                        
                        // KPI繝・・繧ｿ縺ｮ譖ｴ譁ｰ・育樟蝨ｨ縺ｯ繝・ヵ繧ｩ繝ｫ繝亥､繧定｡ｨ遉ｺ・・
                        // 霆｢騾・溷ｺｦ
                        const transferSpeedEl = document.getElementById('transferSpeed');
                        if (transferSpeedEl) {
                            transferSpeedEl.textContent = '譛ｪ險域ｸｬ';
                        }
                        
                        // 蝨ｧ邵ｮ邇・
                        const compressionRatioEl = document.getElementById('compressionRatio');
                        if (compressionRatioEl) {
                            compressionRatioEl.textContent = '譛ｪ險域ｸｬ';
                        }
                        
                        // 繧｢繝・・繝ｭ繝ｼ繝画・蜉溽紫
                        const uploadSuccessRateEl = document.getElementById('uploadSuccessRate');
                        if (uploadSuccessRateEl) {
                            const uploadsTotal = kpiData.counters?.uploadsTotal || 0;
                            if (uploadsTotal > 0) {
                                // 螳滄圀縺ｮ繝・・繧ｿ縺後≠繧句ｴ蜷医・100%縺ｨ陦ｨ遉ｺ
                                uploadSuccessRateEl.textContent = '100.0%';
                            } else {
                                uploadSuccessRateEl.textContent = '譛ｪ險域ｸｬ';
                            }
                        }
                        
                        // 蟷ｳ蝮・ヵ繧｡繧､繝ｫ繧ｵ繧､繧ｺ
                        const avgFileSizeEl = document.getElementById('avgFileSize');
                        if (avgFileSizeEl) {
                            avgFileSizeEl.textContent = '譛ｪ險域ｸｬ';
                        }
                    }
                } catch (kpiError) {
                    console.log('KPI蜿門ｾ励お繝ｩ繝ｼ・育┌隕厄ｼ・', kpiError);
                    // KPI繧ｨ繝ｩ繝ｼ縺ｯ辟｡隕厄ｼ医が繝励す繝ｧ繝翫Ν縺ｪ縺溘ａ・・
                }

            } catch (error) {
                console.error('邨ｱ險域ュ蝣ｱ縺ｮ隱ｭ縺ｿ霎ｼ縺ｿ繧ｨ繝ｩ繝ｼ:', error);
                // 繝・ヵ繧ｩ繝ｫ繝亥､繧定ｨｭ螳・
                document.getElementById('totalUsers').textContent = '3';
                document.getElementById('totalFiles').textContent = '0';
                document.getElementById('todayUploads').textContent = '0';
                document.getElementById('storageUsed').textContent = '0 B';
                
                // KPI隕∫ｴ縺悟ｭ伜惠縺吶ｋ蝣ｴ蜷医・繝・ヵ繧ｩ繝ｫ繝亥､繧定ｨｭ螳・
                const kpiElements = ['transferSpeed', 'compressionRatio', 'uploadSuccessRate', 'avgFileSize'];
                kpiElements.forEach(id => {
                    const el = document.getElementById(id);
                    if (el) {
                        el.textContent = '繧ｨ繝ｩ繝ｼ';
                    }
                });
            }
        }

        // 蛻晄悄蛹・
        if (checkAuth()) {
            loadStats();
            // 30遘偵＃縺ｨ縺ｫ閾ｪ蜍墓峩譁ｰ
            setInterval(loadStats, 30000);
        }
    </script>
</body>
</html>
