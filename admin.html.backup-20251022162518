    <script>
        // Ë™çË®º„ÉÅ„Çß„ÉÉ„ÇØ
        function checkAuth() {
            const token = localStorage.getItem('adminToken');
            if (!token) {
                window.location.href = '/admin-login.html';
                return false;
            }
            return true;
        }

        // „É≠„Ç∞„Ç¢„Ç¶„Éà
        function logout() {
            if (confirm('„É≠„Ç∞„Ç¢„Ç¶„Éà„Åó„Åæ„Åô„ÅãÔºü')) {
                localStorage.removeItem('adminToken');
                window.location.href = '/admin-login.html';
            }
        }

        // ÈÄöÁü•Ë°®Á§∫
        function showNotification(message, type = 'info') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.className = `notification ${type}`;
            notification.style.display = 'block';

            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }

        // Áµ±Ë®àÊÉÖÂ†±„ÅÆË™≠„ÅøËæº„Åø
        async function loadStats() {
            try {
                const token = localStorage.getItem('adminToken');
                const response = await fetch('/api/stats', {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                if (!response.ok) {
                    throw new Error('Áµ±Ë®àÊÉÖÂ†±„ÅÆÂèñÂæó„Å´Â§±Êïó„Åó„Åæ„Åó„Åü');
                }

                const data = await response.json();

                // Âü∫Êú¨Áµ±Ë®à
                if (data.stats) {
                    document.getElementById('totalUsers').textContent = data.stats.users || 0;
                    document.getElementById('totalFiles').textContent = data.stats.files || 0;
                    document.getElementById('todayUploads').textContent = data.stats.todayUploads || 0;
                    document.getElementById('storageUsed').textContent = data.stats.storage?.usedFormatted || '0 B';
                }

                // üÜï Phase 21: KPIÁµ±Ë®à
                if (data.stats.kpi) {
                    const kpi = data.stats.kpi;

                    // Ëª¢ÈÄÅÈÄüÂ∫¶
                    const transferSpeed = kpi.avgTransferSpeed || 0;
                    document.getElementById('transferSpeed').textContent = 
                        transferSpeed > 0 ? `${transferSpeed.toFixed(1)} MB/s` : 'Êú™Ë®àÊ∏¨';

                    // ÂúßÁ∏ÆÁéá
                    const compressionRatio = kpi.avgCompressionRatio || 0;
                    document.getElementById('compressionRatio').textContent = 
                        compressionRatio > 0 ? `${compressionRatio.toFixed(1)}%` : 'Êú™Ë®àÊ∏¨';

                    // „Ç¢„ÉÉ„Éó„É≠„Éº„ÉâÊàêÂäüÁéá
                    const successRate = kpi.uploadSuccessRate || 0;
                    document.getElementById('uploadSuccessRate').textContent = 
                        successRate > 0 ? `${successRate.toFixed(1)}%` : 'Êú™Ë®àÊ∏¨';

                    // Âπ≥Âùá„Éï„Ç°„Ç§„É´„Çµ„Ç§„Ç∫
                    const avgSize = kpi.avgFileSize || 0;
                    document.getElementById('avgFileSize').textContent = 
                        avgSize > 0 ? `${(avgSize / 1024 / 1024).toFixed(1)} MB` : 'Êú™Ë®àÊ∏¨';
                } else {
                    // KPI„Éá„Éº„Çø„Åå„Å™„ÅÑÂ†¥Âêà„ÅÆ„Éá„Éï„Ç©„É´„ÉàË°®Á§∫
                    document.getElementById('transferSpeed').textContent = '„Éá„Éº„Çø„Å™„Åó';
                    document.getElementById('compressionRatio').textContent = '„Éá„Éº„Çø„Å™„Åó';
                    document.getElementById('uploadSuccessRate').textContent = '„Éá„Éº„Çø„Å™„Åó';
                    document.getElementById('avgFileSize').textContent = '„Éá„Éº„Çø„Å™„Åó';
                }

            } catch (error) {
                console.error('Áµ±Ë®àÊÉÖÂ†±„ÅÆË™≠„ÅøËæº„Åø„Ç®„É©„Éº:', error);
                showNotification('Áµ±Ë®àÊÉÖÂ†±„ÅÆË™≠„ÅøËæº„Åø„Å´Â§±Êïó„Åó„Åæ„Åó„Åü', 'error');
            }
        }

        // ÂàùÊúüÂåñ
        if (checkAuth()) {
            loadStats();
            // 30Áßí„Åî„Å®„Å´Ëá™ÂãïÊõ¥Êñ∞
            setInterval(loadStats, 30000);
        }

        // KPIÁõ£Ë¶ñ (Phase 21„ÅßËøΩÂä†)
        async function loadKPI() {
            try {
                const token = localStorage.getItem('adminToken');
                const response = await fetch('/api/kpi/get', {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });
                
                if (!response.ok) {
                    console.error('KPIÂèñÂæó„Ç®„É©„Éº:', response.status);
                    return;
                }
                
                const data = await response.json();
                
                if (data.success && data.kpi) {
                    const kpi = data.kpi;
                    
                    // „Ç¢„ÉÉ„Éó„É≠„Éº„ÉâÊàêÂäüÁéá
                    document.getElementById('kpi-upload-success').textContent = 
                        formatKPI(kpi.uploadSuccessRate, '%');
                    document.getElementById('kpi-upload-success').className = 
                        'kpi-value ' + getKPIColor(kpi.uploadSuccessRate, 90, 95);
                    
                    // „ÉÄ„Ç¶„É≥„É≠„Éº„ÉâÊàêÂäüÁéá
                    document.getElementById('kpi-download-success').textContent = 
                        formatKPI(kpi.downloadSuccessRate, '%');
                    document.getElementById('kpi-download-success').className = 
                        'kpi-value ' + getKPIColor(kpi.downloadSuccessRate, 90, 95);
                    
                    // Âπ≥Âùá„Ç¢„ÉÉ„Éó„É≠„Éº„ÉâÊôÇÈñì
                    document.getElementById('kpi-avg-upload-time').textContent = 
                        formatKPI(kpi.avgUploadTime, 'Áßí');
                    
                    // Âπ≥Âùá„ÉÄ„Ç¶„É≥„É≠„Éº„ÉâÊôÇÈñì
                    document.getElementById('kpi-avg-download-time').textContent = 
                        formatKPI(kpi.avgDownloadTime, 'Áßí');
                    
                    // API„É¨„Çπ„Éù„É≥„Çπ„Çø„Ç§„É†
                    document.getElementById('kpi-api-response').textContent = 
                        formatKPI(kpi.avgApiResponseTime, 'ms');
                    document.getElementById('kpi-api-response').className = 
                        'kpi-value ' + getKPIColor(kpi.avgApiResponseTime, 500, 300, true);
                    
                    // „Ç®„É©„ÉºÁéá
                    document.getElementById('kpi-error-rate').textContent = 
                        formatKPI(kpi.errorRate, '%');
                    document.getElementById('kpi-error-rate').className = 
                        'kpi-value ' + getKPIColor(kpi.errorRate, 5, 2, true);
                    
                    // „Çπ„Éà„É¨„Éº„Ç∏‰ΩøÁî®Áéá
                    document.getElementById('kpi-storage-usage').textContent = 
                        formatKPI(kpi.storageUsage, '%');
                    document.getElementById('kpi-storage-usage').className = 
                        'kpi-value ' + getKPIColor(kpi.storageUsage, 80, 90, true);
                    
                    // ÊúâÂäπ„Éï„Ç°„Ç§„É´Êï∞
                    document.getElementById('kpi-active-files').textContent = 
                        formatKPI(kpi.activeFiles, '‰ª∂');
                }
            } catch (error) {
                console.error('KPIÂèñÂæó„Ç®„É©„Éº:', error);
            }
        }

        // KPIÂÄ§„ÅÆ„Éï„Ç©„Éº„Éû„ÉÉ„Éà
        function formatKPI(value, unit) {
            if (value === undefined || value === null || value === '--') {
                return '--' + unit;
            }
            
            if (unit === '%') {
                return value.toFixed(1) + unit;
            } else if (unit === 'Áßí' || unit === 'ms') {
                return value.toFixed(2) + unit;
            } else {
                return value + unit;
            }
        }

        // KPIËâ≤ÂàÜ„Åë
        function getKPIColor(value, warningThreshold, goodThreshold, reverse = false) {
            if (value === undefined || value === null || value === '--') {
                return '';
            }
            
            if (reverse) {
                if (value >= warningThreshold) return 'danger';
                if (value >= goodThreshold) return 'warning';
                return 'good';
            } else {
                if (value < warningThreshold) return 'danger';
                if (value < goodThreshold) return 'warning';
                return 'good';
            }
        }

        // KPIËá™ÂãïÊõ¥Êñ∞Ôºà30Áßí„Åî„Å®Ôºâ
        setInterval(loadKPI, 30000);
    </script>
</body>
</html>
