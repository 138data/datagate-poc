    <script>
        // URL„Éë„É©„É°„Éº„Çø„Åã„Çâ„Éï„Ç°„Ç§„É´IDÂèñÂæó
        const urlParams = new URLSearchParams(window.location.search);
        const fileIdFromUrl = urlParams.get("id");
        
        // „Éï„Ç°„Ç§„É´ID„Éï„Ç£„Éº„É´„Éâ„Å´Ëá™ÂãïÂÖ•Âäõ
        if (fileIdFromUrl) {
            document.getElementById("fileId").value = fileIdFromUrl;
            // Ëá™Âãï„Åß„Éï„Ç°„Ç§„É´ÊÉÖÂ†±„ÇíÁ¢∫Ë™çÔºà„Åü„Å†„Åó„Éö„Éº„Ç∏„ÅØÈñâ„Åò„Å™„ÅÑÔºâ
            setTimeout(() => checkFile(false), 500);
        }
        
        function loadTestFile() {
            document.getElementById("fileId").value = "test123";
            document.getElementById("otp").value = "123456";
            showMessage("„ÉÜ„Çπ„Éà„Éï„Ç°„Ç§„É´„ÅÆÊÉÖÂ†±„ÇíÂÖ•Âäõ„Åó„Åæ„Åó„Åü„ÄÇ„Äå„ÉÄ„Ç¶„É≥„É≠„Éº„ÉâÂÆüË°å„Äç„Çí„ÇØ„É™„ÉÉ„ÇØ„Åó„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇ", "success");
        }
        
        async function checkFile(showError = true) {
            const fileId = document.getElementById("fileId").value.trim();
            
            if (!fileId) {
                if (showError) {
                    showMessage("„Éï„Ç°„Ç§„É´ID„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ", "error");
                }
                return;
            }
            
            const loadingDiv = document.getElementById("loading");
            loadingDiv.style.display = "block";
            
            try {
                const response = await fetch(`/api/download?id=${fileId}`);
                const data = await response.json();
                
                if (data.success) {
                    showMessage(`‚úÖ „Éï„Ç°„Ç§„É´Á¢∫Ë™çOK: ${data.fileName} (ÊÆã„Çä${data.remainingDownloads}Âõû„ÉÄ„Ç¶„É≥„É≠„Éº„ÉâÂèØËÉΩ)`, "success");
                } else {
                    // „Ç®„É©„Éº„Åß„ÇÇ„Éö„Éº„Ç∏„ÅØÈñâ„Åò„Å™„ÅÑ
                    if (data.availableTest) {
                        showMessage(`‚ö†Ô∏è ${data.error}. „ÉÜ„Çπ„Éà„Éï„Ç°„Ç§„É´„Çí„ÅäË©¶„Åó„Åè„Å†„Åï„ÅÑ„ÄÇ`, "warning");
                    } else {
                        showMessage(`‚ùå ${data.error}`, "error");
                    }
                }
                
            } catch (error) {
                console.error("Check error:", error);
                if (showError) {
                    showMessage("„Ç®„É©„Éº„ÅåÁô∫Áîü„Åó„Åæ„Åó„Åü„ÄÇ„ÉÜ„Çπ„Éà„Éï„Ç°„Ç§„É´„Çí„ÅäË©¶„Åó„Åè„Å†„Åï„ÅÑ„ÄÇ", "warning");
                }
            } finally {
                loadingDiv.style.display = "none";
            }
        }
        
        async function downloadFile() {
            const fileId = document.getElementById("fileId").value.trim();
            const otp = document.getElementById("otp").value.trim();
            const loadingDiv = document.getElementById("loading");
            
            if (!fileId || !otp) {
                showMessage("„Éï„Ç°„Ç§„É´ID„Å®OTP„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ", "error");
                return;
            }
            
            if (otp.length !== 6 || !/^\d+$/.test(otp)) {
                showMessage("OTP„ÅØ6Ê°Å„ÅÆÊï∞Â≠ó„ÅßÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ", "error");
                return;
            }
            
            loadingDiv.style.display = "block";
            const downloadBtn = document.querySelector("button[onclick='downloadFile()']");
            downloadBtn.disabled = true;
            
            try {
                const response = await fetch(`/api/download?id=${fileId}`, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({ otp })
                });
                
                if (response.ok) {
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement("a");
                    a.style.display = "none";
                    a.href = url;
                    
                    // „Éï„Ç°„Ç§„É´Âêç„ÅÆÂèñÂæó
                    const contentDisposition = response.headers.get("Content-Disposition");
                    const fileNameMatch = contentDisposition?.match(/filename="(.+)"/);
                    a.download = fileNameMatch ? fileNameMatch[1] : "download";
                    
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    
                    showMessage("‚úÖ „ÉÄ„Ç¶„É≥„É≠„Éº„Éâ„ÅåÈñãÂßã„Åï„Çå„Åæ„Åó„ÅüÔºÅ", "success");
                    
                } else {
                    const error = await response.json();
                    if (error.hint) {
                        showMessage(`‚ùå ${error.error}. „Éí„É≥„Éà: ${error.hint}`, "error");
                    } else {
                        showMessage(`‚ùå ${error.error}`, "error");
                    }
                }
                
            } catch (error) {
                console.error("Download error:", error);
                showMessage("„ÉÄ„Ç¶„É≥„É≠„Éº„Éâ„Å´Â§±Êïó„Åó„Åæ„Åó„Åü„ÄÇ„ÉÜ„Çπ„Éà„Éï„Ç°„Ç§„É´„Çí„ÅäË©¶„Åó„Åè„Å†„Åï„ÅÑ„ÄÇ", "error");
                
            } finally {
                loadingDiv.style.display = "none";
                downloadBtn.disabled = false;
            }
        }
        
        function showMessage(text, type) {
            const messageDiv = document.getElementById("message");
            messageDiv.className = `message ${type}`;
            messageDiv.textContent = text;
            messageDiv.style.display = "block";
        }
        
        // Enter„Ç≠„Éº„Åß„ÉÄ„Ç¶„É≥„É≠„Éº„Éâ
        document.getElementById("otp").addEventListener("keypress", (e) => {
            if (e.key === "Enter") {
                downloadFile();
            }
        });
    </script>
