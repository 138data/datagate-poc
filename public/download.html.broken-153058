            <p class="text-xs text-gray-500 mt-2">PPAP代替・安全なファイル受け渡しシステム</p>
        </div>
    </footer>

    <script>
        // URLパラメータ取得
        const params = new URLSearchParams(window.location.search);
        const fileId = params.get('id') || params.get('fileId') || params.get('f');

        // 要素取得
        const errorContainerEl = document.getElementById('error-container');
        const errorMessageEl = document.getElementById('error-message');
        const downloadContainerEl = document.getElementById('download-container');
        const downloadFormEl = document.getElementById('download-form');
        const downloadingEl = document.getElementById('downloading');
        const downloadSuccessEl = document.getElementById('download-success');
        const otpErrorEl = document.getElementById('otp-error');
        const otpErrorMessageEl = document.getElementById('otp-error-message');

        // エラー表示関数
        function showError(message) {
            downloadContainerEl.classList.add('hidden');
            errorContainerEl.classList.remove('hidden');
            errorMessageEl.textContent = message;
        }

        // OTPエラー表示関数
        function showOtpError(message) {
            otpErrorEl.classList.remove('hidden');
            otpErrorMessageEl.textContent = message;
        }

        // OTPエラー非表示関数
        function hideOtpError() {
            otpErrorEl.classList.add('hidden');
        }

        // 初期チェック：fileIdの存在確認のみ
        if (!fileId) {
            showError('無効なダウンロードリンクです。URLを確認してください。');
        } else {
            // OTP入力フォーカス
            document.getElementById('otp').focus();
        }

        // OTP送信・短寿命URL取得（Phase 36準拠）
        downloadFormEl.addEventListener('submit', async (e) => {
            e.preventDefault();
            hideOtpError();

            const otp = document.getElementById('otp').value.trim();

            // OTP検証（6桁の数字）
            if (!/^\d{6}$/.test(otp)) {
                showOtpError('認証コードは6桁の数字で入力してください。');
                return;
            }

            // ダウンロード開始
            downloadFormEl.classList.add('hidden');
            downloadingEl.classList.remove('hidden');

            try {
                // Phase 36: POST /api/files/download → JSON（downloadUrl）
                const response = await fetch('/api/files/download', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ fileId, otp })
                });

                const data = await response.json();

                if (!response.ok) {
                    let errorMessage = '認証コードが正しくありません。';

                    if (response.status === 401) {
                        errorMessage = data.error || '認証コードが正しくありません。';
                    } else if (response.status === 404) {
                        errorMessage = 'ファイルが見つかりません。';
                    } else if (response.status === 410) {
                        errorMessage = 'ファイルの有効期限が切れています。';
                    } else if (response.status === 403) {
                        errorMessage = 'ダウンロード回数の上限に達しました。';
                    } else if (data.error) {
                        errorMessage = data.error;
                    }

                    downloadingEl.classList.add('hidden');
                    downloadFormEl.classList.remove('hidden');
                    showOtpError(errorMessage);
                    return;
                }

                // JSON レスポンス取得（downloadUrl必須）
                if (!data.downloadUrl) {
                    throw new Error('ダウンロードURLが返却されませんでした。');
                }

                console.log('[Phase 36] Download URL issued:', {
                    fileName: data.fileName,
                    expiresInSec: data.expiresInSec,
                    remainingDownloads: data.remainingDownloads
                });

                // 成功表示
                downloadingEl.classList.add('hidden');
                downloadSuccessEl.classList.remove('hidden');

                // Phase 36契約：短寿命URLへ遷移（ブラウザ標準DLに委譲）
                window.location.href = data.downloadUrl;

            } catch (error) {
                console.error('[Phase 36] Download error:', error);
                downloadingEl.classList.add('hidden');
                downloadFormEl.classList.remove('hidden');
                showOtpError('ダウンロード中にエラーが発生しました。しばらくしてから再度お試しください。');
            }
        });

        // OTP入力時のエラークリア
        document.getElementById('otp').addEventListener('input', () => {
            hideOtpError();
        });
    </script>
</body>
