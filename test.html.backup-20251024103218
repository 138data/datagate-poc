    <script>
        // APIãƒ™ãƒ¼ã‚¹URLã‚’å‹•çš„ã«å–å¾—
        const API_BASE = location.origin;
        
        // ãƒšãƒ¼ã‚¸èª­ã¿è¾¼ã¿æ™‚ã«APIãƒ™ãƒ¼ã‚¹URLã‚’è¡¨ç¤º
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('apiBaseUrl').textContent = API_BASE;
        });

        // ãƒ•ã‚¡ã‚¤ãƒ«é¸æŠæ™‚ã®å‡¦ç†
        document.getElementById('fileInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const fileNameDiv = document.getElementById('fileName');
            const uploadBtn = document.getElementById('uploadBtn');
            
            if (file) {
                const sizeMB = (file.size / 1024 / 1024).toFixed(2);
                fileNameDiv.textContent = `ğŸ“„ ${file.name} (${sizeMB} MB)`;
                uploadBtn.disabled = false;
            } else {
                fileNameDiv.textContent = 'ãƒ•ã‚¡ã‚¤ãƒ«ãŒé¸æŠã•ã‚Œã¦ã„ã¾ã›ã‚“';
                uploadBtn.disabled = true;
            }
        });

        // ãƒ•ã‚¡ã‚¤ãƒ«ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰
        async function uploadFile() {
            const fileInput = document.getElementById('fileInput');
            const resultDiv = document.getElementById('uploadResult');
            const uploadBtn = document.getElementById('uploadBtn');
            
            if (!fileInput.files[0]) {
                showResult('uploadResult', 'error', 'ãƒ•ã‚¡ã‚¤ãƒ«ã‚’é¸æŠã—ã¦ãã ã•ã„');
                return;
            }

            uploadBtn.disabled = true;
            uploadBtn.textContent = 'ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ä¸­...';

            try {
                const formData = new FormData();
                formData.append('file', fileInput.files[0]);

                const response = await fetch(`${API_BASE}/api/upload`, {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();

                if (data.success) {
                    let message = `âœ… ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰æˆåŠŸï¼\n\n`;
                    message += `ğŸ“‹ ãƒ•ã‚¡ã‚¤ãƒ«ID: ${data.fileId}\n`;
                    message += `ğŸ”‘ OTP: ${data.otp}\n`;
                    message += `ğŸ“„ ãƒ•ã‚¡ã‚¤ãƒ«å: ${data.fileName}\n`;
                    message += `ğŸ“¦ ã‚µã‚¤ã‚º: ${(data.fileSize / 1024).toFixed(2)} KB`;
                    
                    if (data.compressed) {
                        message += `\nğŸ—œï¸ åœ§ç¸®å¾Œ: ${(data.compressedSize / 1024).toFixed(2)} KB`;
                        const ratio = ((1 - data.compressedSize / data.fileSize) * 100).toFixed(1);
                        message += ` (${ratio}% å‰Šæ¸›)`;
                    }
                    
                    message += `\nğŸ”— URL: ${data.downloadUrl}\n`;
                    message += `â° æœ‰åŠ¹æœŸé™: ${new Date(data.expiryTime).toLocaleString('ja-JP')}`;
                    
                    showResult('uploadResult', 'success', message);
                    
                    // ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰ãƒ•ã‚©ãƒ¼ãƒ ã«è‡ªå‹•å…¥åŠ›
                    document.getElementById('fileId').value = data.fileId;
                    document.getElementById('otp').value = data.otp;
                } else {
                    showResult('uploadResult', 'error', `âŒ ${data.error || 'ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã«å¤±æ•—ã—ã¾ã—ãŸ'}`);
                }
            } catch (error) {
                showResult('uploadResult', 'error', `âŒ ã‚¨ãƒ©ãƒ¼: ${error.message}`);
            } finally {
                uploadBtn.disabled = false;
                uploadBtn.textContent = 'ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰';
            }
        }

        // ãƒ•ã‚¡ã‚¤ãƒ«ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰
        async function downloadFile() {
            const fileId = document.getElementById('fileId').value.trim();
            const otp = document.getElementById('otp').value.trim();
            
            if (!fileId || !otp) {
                showResult('downloadResult', 'error', 'ãƒ•ã‚¡ã‚¤ãƒ«IDã¨OTPã‚’å…¥åŠ›ã—ã¦ãã ã•ã„');
                return;
            }

            try {
                // ã¾ãšãƒ•ã‚¡ã‚¤ãƒ«æƒ…å ±ã‚’å–å¾—ï¼ˆGETï¼‰
                const infoResponse = await fetch(`${API_BASE}/api/download?id=${fileId}`);
                const infoData = await infoResponse.json();

                if (!infoData.success) {
                    showResult('downloadResult', 'error', `âŒ ${infoData.error || 'ãƒ•ã‚¡ã‚¤ãƒ«æƒ…å ±ã®å–å¾—ã«å¤±æ•—ã—ã¾ã—ãŸ'}`);
                    return;
                }

                // æ¬¡ã«ãƒ•ã‚¡ã‚¤ãƒ«ã‚’ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰ï¼ˆPOSTï¼‰
                const downloadResponse = await fetch(`${API_BASE}/api/download?id=${fileId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ otp })
                });

                if (downloadResponse.ok) {
                    // ãƒ•ã‚¡ã‚¤ãƒ«ã‚’ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰
                    const blob = await downloadResponse.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = infoData.fileName;
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    window.URL.revokeObjectURL(url);

                    let message = `âœ… ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰æˆåŠŸï¼\n\n`;
                    message += `ğŸ“„ ãƒ•ã‚¡ã‚¤ãƒ«å: ${infoData.fileName}\n`;
                    message += `ğŸ“¦ ã‚µã‚¤ã‚º: ${(infoData.fileSize / 1024).toFixed(2)} KB\n`;
                    message += `ğŸ“¥ æ®‹ã‚ŠDLå›æ•°: ${infoData.remainingDownloads - 1} å›`;
                    
                    showResult('downloadResult', 'success', message);
                } else {
                    const errorData = await downloadResponse.json();
                    showResult('downloadResult', 'error', `âŒ ${errorData.error || 'ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰ã«å¤±æ•—ã—ã¾ã—ãŸ'}`);
                }
            } catch (error) {
                showResult('downloadResult', 'error', `âŒ ã‚¨ãƒ©ãƒ¼: ${error.message}`);
            }
        }

        // çµæœè¡¨ç¤º
        function showResult(elementId, type, message) {
            const div = document.getElementById(elementId);
            div.className = `result ${type}`;
            div.innerHTML = message.replace(/\n/g, '<br>');
            div.style.display = 'block';
        }
    </script>
