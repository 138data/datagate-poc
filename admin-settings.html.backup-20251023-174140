  async function testCleanup() {
    console.log('ğŸ§¹ ã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—ãƒ†ã‚¹ãƒˆé–‹å§‹...');
    show('ok', 'â³ ã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—ã‚¸ãƒ§ãƒ–ã‚’å®Ÿè¡Œã—ã¦ã„ã¾ã™...');
    try {
      const token = localStorage.getItem('adminToken');
      if (!token) {
        throw new Error('èªè¨¼ãƒˆãƒ¼ã‚¯ãƒ³ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“ã€‚å†ãƒ­ã‚°ã‚¤ãƒ³ã—ã¦ãã ã•ã„ã€‚');
      }
      // é–‹ç™ºç’°å¢ƒã§ã¯ç®¡ç†è€…ãƒˆãƒ¼ã‚¯ãƒ³ã§å®Ÿè¡Œå¯èƒ½
      const res = await fetch('/api/cron/cleanup', {
        method: 'GET',
        headers: {
          'Authorization': `Bearer ${token}`,
          'Content-Type': 'application/json'
        }
      });
      if (handleAuthError(res)) return;
      const d = await res.json();
      console.log('ğŸ§¹ ã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—çµæœ:', d);
      if (!res.ok || !d.success) {
        throw new Error(d.error || 'ã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—ã«å¤±æ•—ã—ã¾ã—ãŸ');
      }
      const summary = d.summary || {};
      show('ok', `âœ… ã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—å®Œäº†ï¼ˆå‰Šé™¤: ${summary.deleted || 0}ä»¶ã€ã‚¹ã‚­ãƒƒãƒ—: ${summary.skipped || 0}ä»¶ï¼‰`);
    } catch (e) {
      console.error('ã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—ã‚¨ãƒ©ãƒ¼:', e);
      show('error', 'âŒ ' + e.message);
    }
  }
  console.log('ğŸ”§ Attaching cleanup event listener...');
  $('btnTestCleanup').addEventListener('click', () => {
    console.log('ğŸ§¹ Cleanup Test clicked');
    testCleanup();
  });
  // â–²â–²â–² è¿½åŠ ã—ãŸJavaScript â–²â–²â–²

  console.log('âœ… Event listeners attached');
  console.log('ğŸ”„ Initial load...');
  load();
})();
