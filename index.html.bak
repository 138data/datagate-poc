    <script>
        // ãƒ™ãƒ¼ã‚¹URLã‚’å‹•çš„ã«å–å¾—
        const API_BASE = location.origin;

        // DOMè¦ç´ 
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const selectedFile = document.getElementById('selectedFile');
        const fileName = document.getElementById('fileName');
        const fileSize = document.getElementById('fileSize');
        const uploadBtn = document.getElementById('uploadBtn');
        const cancelBtn = document.getElementById('cancelBtn');
        const progress = document.getElementById('progress');
        const progressFill = document.getElementById('progressFill');
        const resultArea = document.getElementById('resultArea');
        const resultTitle = document.getElementById('resultTitle');
        const resultFileId = document.getElementById('resultFileId');
        const resultOTP = document.getElementById('resultOTP');
        const downloadLink = document.getElementById('downloadLink');
        const resultExpiry = document.getElementById('resultExpiry');

        let selectedFileData = null;

        // ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã‚¨ãƒªã‚¢ã®ã‚¯ãƒªãƒƒã‚¯ã‚¤ãƒ™ãƒ³ãƒˆ
        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });

        // ãƒ•ã‚¡ã‚¤ãƒ«é¸æŠã‚¤ãƒ™ãƒ³ãƒˆ
        fileInput.addEventListener('change', (e) => {
            handleFileSelect(e.target.files[0]);
        });

        // ãƒ‰ãƒ©ãƒƒã‚°ï¼†ãƒ‰ãƒ­ãƒƒãƒ—ã‚¤ãƒ™ãƒ³ãƒˆ
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('drag-over');
        });

        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('drag-over');
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('drag-over');
            handleFileSelect(e.dataTransfer.files[0]);
        });

        // ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ãƒœã‚¿ãƒ³
        uploadBtn.addEventListener('click', uploadFile);

        // ã‚­ãƒ£ãƒ³ã‚»ãƒ«ãƒœã‚¿ãƒ³
        cancelBtn.addEventListener('click', resetForm);

        /**
         * ãƒ•ã‚¡ã‚¤ãƒ«é¸æŠå‡¦ç†
         */
        function handleFileSelect(file) {
            if (!file) return;

            // ãƒ•ã‚¡ã‚¤ãƒ«ã‚µã‚¤ã‚ºä¸Šé™ãƒã‚§ãƒƒã‚¯ï¼ˆ10MBï¼‰
            const maxSize = 10 * 1024 * 1024; // 10MB
            if (file.size > maxSize) {
                alert(`ãƒ•ã‚¡ã‚¤ãƒ«ã‚µã‚¤ã‚ºãŒå¤§ãã™ãã¾ã™ã€‚\næœ€å¤§: ${Math.round(maxSize / 1024 / 1024)}MB`);
                return;
            }

            selectedFileData = file;

            // ãƒ•ã‚¡ã‚¤ãƒ«æƒ…å ±è¡¨ç¤º
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);

            // UIæ›´æ–°
            selectedFile.classList.add('show');
            uploadBtn.disabled = false;
            cancelBtn.style.display = 'block';
            uploadArea.style.display = 'none';
            resultArea.classList.remove('show');
        }

        /**
         * ãƒ•ã‚¡ã‚¤ãƒ«ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰å‡¦ç†
         */
        async function uploadFile() {
            if (!selectedFileData) {
                alert('ãƒ•ã‚¡ã‚¤ãƒ«ãŒé¸æŠã•ã‚Œã¦ã„ã¾ã›ã‚“');
                return;
            }

            try {
                // UIæ›´æ–°
                uploadBtn.disabled = true;
                uploadBtn.textContent = 'â³ ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ä¸­...';
                progress.classList.add('show');
                updateProgress(0);

                // ãƒ•ã‚¡ã‚¤ãƒ«ã‚’ArrayBufferã¨ã—ã¦èª­ã¿è¾¼ã¿
                const arrayBuffer = await selectedFileData.arrayBuffer();

                updateProgress(30);

                // ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰å®Ÿè¡Œï¼ˆapplication/octet-streamï¼‰
                const response = await fetch(`${API_BASE}/api/upload?filename=${encodeURIComponent(selectedFileData.name)}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/octet-stream',
                        'X-Filename': selectedFileData.name
                    },
                    body: arrayBuffer
                });

                updateProgress(70);

                const data = await response.json();

                updateProgress(100);

                if (data.success) {
                    // æˆåŠŸæ™‚ã®è¡¨ç¤º
                    showResult({
                        success: true,
                        fileId: data.fileId,
                        otp: data.otp,
                        downloadUrl: data.downloadUrl,
                        expiresAt: data.expiresAt
                    });
                } else {
                    // ã‚¨ãƒ©ãƒ¼æ™‚ã®è¡¨ç¤º
                    showResult({
                        success: false,
                        error: data.error || 'ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã«å¤±æ•—ã—ã¾ã—ãŸ'
                    });
                }

            } catch (error) {
                console.error('Upload error:', error);
                showResult({
                    success: false,
                    error: `ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ: ${error.message}`
                });
            } finally {
                // UIå¾©å…ƒ
                uploadBtn.disabled = false;
                uploadBtn.textContent = 'ğŸ“¤ ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰';
                progress.classList.remove('show');
            }
        }

        /**
         * çµæœè¡¨ç¤º
         */
        function showResult(result) {
            resultArea.classList.add('show');

            if (result.success) {
                // æˆåŠŸæ™‚
                resultArea.classList.remove('error');
                resultTitle.textContent = 'âœ… ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰æˆåŠŸï¼';
                resultFileId.textContent = result.fileId;
                resultOTP.textContent = result.otp;
                downloadLink.href = result.downloadUrl;
                resultExpiry.textContent = formatDate(result.expiresAt);

                // ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«
                resultArea.scrollIntoView({ behavior: 'smooth' });
            } else {
                // ã‚¨ãƒ©ãƒ¼æ™‚
                resultArea.classList.add('error');
                resultTitle.textContent = 'âŒ ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰å¤±æ•—';
                resultFileId.textContent = result.error;
                document.querySelector('.result-label').textContent = 'ã‚¨ãƒ©ãƒ¼å†…å®¹';
                
                // ãã®ä»–ã®çµæœé …ç›®ã‚’éè¡¨ç¤º
                resultOTP.closest('.result-item').style.display = 'none';
                downloadLink.closest('.result-item').style.display = 'none';
                resultExpiry.closest('.result-item').style.display = 'none';
            }
        }

        /**
         * ãƒ•ã‚©ãƒ¼ãƒ ãƒªã‚»ãƒƒãƒˆ
         */
        function resetForm() {
            selectedFileData = null;
            fileInput.value = '';
            selectedFile.classList.remove('show');
            uploadBtn.disabled = true;
            cancelBtn.style.display = 'none';
            uploadArea.style.display = 'block';
            resultArea.classList.remove('show');
            progress.classList.remove('show');

            // ã‚¨ãƒ©ãƒ¼è¡¨ç¤ºã®å¾©å…ƒ
            resultArea.classList.remove('error');
            resultTitle.textContent = 'âœ… ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰æˆåŠŸï¼';
            document.querySelector('.result-label').textContent = 'ğŸ“‹ ãƒ•ã‚¡ã‚¤ãƒ«ID';
            resultOTP.closest('.result-item').style.display = 'block';
            downloadLink.closest('.result-item').style.display = 'block';
            resultExpiry.closest('.result-item').style.display = 'block';
        }

        /**
         * ãƒ—ãƒ­ã‚°ãƒ¬ã‚¹ãƒãƒ¼æ›´æ–°
         */
        function updateProgress(percent) {
            progressFill.style.width = `${percent}%`;
            progressFill.textContent = `${percent}%`;
        }

        /**
         * ãƒ•ã‚¡ã‚¤ãƒ«ã‚µã‚¤ã‚ºã®ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆ
         */
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
        }

        /**
         * æ—¥æ™‚ã®ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆ
         */
        function formatDate(dateString) {
            const date = new Date(dateString);
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            const hours = String(date.getHours()).padStart(2, '0');
            const minutes = String(date.getMinutes()).padStart(2, '0');
            return `${year}å¹´${month}æœˆ${day}æ—¥ ${hours}:${minutes}`;
        }
    </script>
